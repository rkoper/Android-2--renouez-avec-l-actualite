<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m.sofiane.mynews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.m.sofiane.mynews.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.m.sofiane.mynews.activity.PageHelp" />
        <activity android:name="com.m.sofiane.mynews.PageSearch" />
        <activity
            android:name="com.m.sofiane.mynews.activity.PageAbout"
            android:parentActivityName="com.m.sofiane.mynews.activity.MainActivity" />
        <activity android:name="com.m.sofiane.mynews.activity.SubActivity" />
        <activity android:name="com.m.sofiane.mynews.PageSearchResult" />
        <activity
            android:name="com.m.sofiane.mynews.activity.PageNotification"
            android:label="Notification"
            android:parentActivityName="com.m.sofiane.mynews.activity.MainActivity" />

        <receiver android:name="com.m.sofiane.mynews.MyAlarm" />
    </application>

</manifest>